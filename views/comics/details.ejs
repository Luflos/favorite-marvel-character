<h1> this is the comic page </h1>

<% details.forEach(detail=> { %>
  <div>
    <p>
      Title: <%= detail.title %>
    </p>
    <p> 
      <% if ( detail.description === null) { %>
        No description provided
        <%} else { %>
        Description: <%= detail.description %>
      <% } %>
    </p>
    <p>
      Series: <%= detail.series.name %>
    </p>
    <p>
      Price: <%= detail.prices[0].price %>
    </p>
    <p>
      Creators:
      <% for( let i = 0; i < detail.creators.items.length; i++ ) { %>
        <%= detail.creators.items[i].name %> - Role:
        <%= detail.creators.items[i].role %>, 
      <% } %>
    </p>
    <p>
     Characters:
      <% for( let i = 0; i < detail.characters.items.length; i++ ) { %>
        <%= detail.characters.items[i].name %>,
      <% } %>
    </p>
    <p>
      Stories: <%= detail.stories.available %>
    </p>
    <p>
      Events: <%= detail.events.available %>
    </p>
    <p>
      <img src='<%= detail.thumbnail.path%>/portrait_uncanny.jpg' alt="Picture of <%= detail.name %>"/>
      <%= attribution %>
    </p>
  </div>
  <% }) %>