<h1 class="text-center">Creators:</h1>

<% if (badData.count === 0) {%> 
  <div class = 'd-flex justify-content-center'>
       <img src = "/img/hulk.gif" />
  </div>
  <h1 class ='text-center'> No search results... Please try again!</h1>

<% } else { %>

<% creators.forEach(creator=> { %>
  <div>
    <p>
      Name: <%= creator.fullName %>
    </p>
    <p>
      <img src='<%= creator.thumbnail.path%>/portrait_fantastic.jpg' alt="Picture of <%= creator.fullName %>"/>
    </p>
  </div>
  <h1>
    <a href="/creators/<%=creator.id %>"> More Details</a>

  </h1>
  <% }) %>
  <% } %>