<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 text-center">
      <form class="form-group" action="/users" method="post">
        <div class="form-floating mb-3">
          <input type="name" name="name" class="form-control" id="floatingName" placeholder="Name">
          <label for="floatingName">Name</label>
        </div>
        <div class="form-floating mb-3">
          <input type="email" name="email" class="form-control" id="floatingInput" placeholder="email@email.com">
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
          <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>
        <br>
        <button class="btn btn-dark fs-3" type="submit">Sign Up!</button>
      </form>
    </div>
  </div>
</div>

